<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/kali_accent" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/kali_surface" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/kali_input_border" />
        </shape>
    </item>
</selector>