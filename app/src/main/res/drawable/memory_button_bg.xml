<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#9900cc"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#bb33ff"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7700aa"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#9900cc"/>
        </shape>
    </item>
</selector>