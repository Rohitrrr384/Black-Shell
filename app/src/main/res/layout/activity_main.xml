<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background_gradient"
    android:background="@drawable/img_2"
    tools:context=".MainActivity">

    <!-- Particle effect overlay -->

    <!-- Main logo container -->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@drawable/particle_overlay" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        >

        <!-- Kali Linux inspired dragon logo -->

        <!-- Logo text with cyber styling -->
        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLACK SHELL"
            android:textSize="28sp"
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:shadowColor="#003300"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENETRATION TESTING"
            android:textSize="12sp"
            android:textColor="#00CC00"
            android:fontFamily="monospace"
            android:letterSpacing="0.3"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Loading indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Progress bar with cyber styling -->
        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:indeterminateTint="#00FF00"
            android:layout_marginBottom="16dp" />

        <!-- Loading text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initializing System..."
            android:textSize="14sp"
            android:textColor="#00AA00"
            android:fontFamily="monospace"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Top corner accent -->

    <!-- Bottom corner accent -->
    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="28dp"
        android:layout_marginStart="327dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.6"
        android:background="@drawable/corner_accent" />

    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="31dp"
        android:layout_marginEnd="327dp"
        android:alpha="0.6"
        android:background="@drawable/corner_accent"
        android:rotation="180" />

</RelativeLayout>